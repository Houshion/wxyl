const app = getApp();
const tools = app.tools;

Page({

  /**
   * 页面的初始数据
   */
  data: {
    orderListUnuse: [],
    orderListUsing: [],
    orderListUsed: [],
    form: {
      page: 1,
      limit: 20,
      status: 0
    },
    lock: false,
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.init();
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    wx.showNavigationBarLoading();
    this.data.form.page = 1;
    this.init();
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    this.data.form.page++;
    if (!this.data.lock) {
      this.init();
    }
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },

  /**
   * 初始化数据
   */
  init() {
    app.wxRequest(
      '/api/order/userOrders', this.data.form,
      res => {
        tools.hideLoading();
        if (res.data.code == 1) {
          switch (this.data.form.status) {
            case 0:
              var list = this.data.orderListUnuse
              this.setData({
                orderListUnuse: [...list, ...res.data.data.list]
              })
              break;
            case 1:
              var list = this.data.orderListUsing
              this.setData({
                orderListUsing: [...list, ...res.data.data.list]
              })
              break;
            case 2:
              var list = this.data.orderListUsed
              this.setData({
                orderListUsed: [...list, ...res.data.data.list]
              })
              break;
          }
        } else {
          tools.showToast(res.data.msg)
        }
      }
    )
  },

  /**
   * 
   */
  onChange(e) {
    this.setData({
      'form.status': e.detail.index,
      orderListUnuse: [],
      orderListUsing: [],
      orderListUsed: [],
      'form.page': 1,
    })
    this.init()
  },

  /**
   * 退款
   */
  fullback(e) {
    console.log(e.currentTarget.dataset.price)
    const that = this
    wx.showModal({
      title: '系统将原路返回金额',
      content: '￥' + e.currentTarget.dataset.price,
      confirmColor: "#5ac2bb",
      success(res) {
        if (res.confirm) {
          app.wxRequest(
            '/api/order/applyRefund', {
              orderId: e.currentTarget.dataset.id
            },
            rt => {
              tools.showToast(rt.data.msg)
              this.init();
            }
          )
        }
      }
    })
  },
  useDevice(e) {
    const deviceno = e.currentTarget.dataset.deviceno
    const orderId = e.currentTarget.dataset.orderid
    tools.globalData.orderNo = e.currentTarget.dataset.orderno
    wx.showModal({
      title: '温馨提示',
      content: '是否前往使用设备？',
      confirmColor: "#5ac2bb",
      success(res) {
        if (res.confirm) {
          wx.navigateTo({
            url: '../using/index?deviceNo=' + deviceno + '&orderId=' + orderId,
          })
        }
      }
    })
  },
  comment(e) {
    console.log(e.currentTarget.dataset.id)
  },
})