const app = getApp();
const tools = app.tools;
let pageMsg = {
  page: 1,
  limit: 20
};
Page({

  /**
   * 页面的初始数据
   */
  data: {
    search: '',
    lock: false,
    list: [],
    url: tools.globalData.url
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },
  listeningEvent(e){
    this.onShow();
  },
  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    pageMsg.page = 1;
    this.init();
  },
  init() { //获取列表
    tools.showLoading();
    const form = {
      ...pageMsg,
      storeId: tools.globalData.storeId,
      name: this.data.search
    };
    app.wxRequest('/api/storeEmployee/queryStoreEmployeeList',form , res => {
      tools.hideLoading();
      if (res.data.code == 1) {
        const result = res.data.data.list;
        this.setData({
          list: pageMsg.page == 1 ? result : this.data.list.concat(result),
          lock: pageMsg.page >= res.data.data.totalPage ? true : false
        })
      } else {
        tools.showToast(res.data.msg);
      }
      if(pageMsg.page == 1){
        wx.hideNavigationBarLoading();
        wx.stopPullDownRefresh();
      }
    });
  },
  /**
   * 搜索框输入
   */
  bindKeyInput(e){
    this.setData({
      search: e.detail.value
    })
  },
  cancel(){
    this.setData({
      search: ''
    })
  },
  bindconfirm(){
    console.log('search',this.data.search)
    pageMsg.page = 1;
    this.init();
  },
  dele(e){
    const { id } = e.currentTarget.dataset;
    tools.showModal('是否删除该设备?',flag => {
      if(flag){
        tools.showLoading();
        app.wxRequest(
            '/api/storeEmployee/delStoreEmp',
            {
              empId: id
            },
            res => {
              tools.hideLoading();
              if(res.data.code == 1){
                tools.showToast('删除成功');
                setTimeout(() => {
                  pageMsg.page = 1;
                  this.init();
                },1500)
              }else{
                tools.showToast(res.data.msg)
              }
            }
        )
      }
    })
  },
  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    wx.showNavigationBarLoading();
    pageMsg.page = 1;
    this.init();
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    pageMsg.page ++;
    if (!this.data.lock) {
      this.init();
    }
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})
