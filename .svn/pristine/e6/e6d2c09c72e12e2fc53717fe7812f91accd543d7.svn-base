@import '/css/main.wxss';

.form_box .list + .list{
    border-top: 1px solid #e5e5e5;
}
.pic_wrap {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    margin-right: 14rpx;
    overflow: hidden;
    float: left;
}
image.pic {
    width: 100%;
    height: 100%;
}
.pic_wrap .delete{
    position: absolute;
    right: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    font-size: 30rpx;
}

.hideInput {
    display: none;
}

