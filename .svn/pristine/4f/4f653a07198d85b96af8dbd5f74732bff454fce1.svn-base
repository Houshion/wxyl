<view class="deivceBoxes">
    <view class="device" wx:for="{{deviceList}}">
        <view class="package">
            <view class="message border-b pb20 flex_sb">
                <view class="">
                    <view class="title mb20">{{item.name}}</view>
                    <view class="times col9">使用次数：{{item.times}}次</view>
                    <view class="price col9">购买价格：{{item.price}}元</view>
                </view>
                <view class="btn">
                    <view class="col9">设备类型</view>
                    <view class="buy">支付</view>
                </view>
            </view>
            <view class="content">
                <view class="label mtb20">套餐内容说明</view>
                <view class="con col9">{{item.content}}</view>
            </view>
        </view>
    </view>
</view>