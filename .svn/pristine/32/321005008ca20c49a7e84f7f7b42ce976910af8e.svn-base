const app = getApp();
const tools = app.tools;

Page({

  /**
   * 页面的初始数据
   */
  data: {
    swiperImgs: [],
    tabs: [{
      name: "全部文章",
      id: 0
    }],
    list: [],
    form: {
      categoryId: '',
      page: 1,
      limit: 20
    }
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.getBanner()
    this.getCategory()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },

  /**
   * 获取广告banner
   */
  getBanner() {
    app.wxRequest(
      '/api/banner/getBanner', {
        type: 0
      },
      res => {
        tools.hideLoading();
        if (res.data.code == 1) {
          res.data.data.forEach(item => {
            item.img_url = tools.globalData.url + item.img_url
          });
          console.log(res.data.data)
          this.setData({
            swiperImgs: res.data.data
          })
        }
      }
    )
  },

  /**
   * 获取文章分类
   */
  getCategory() {
    app.wxRequest(
      '/api/articleCategory/list', {},
      res => {
        tools.hideLoading();
        if (res.data.code == 1) {
          console.log(res.data.data)
          this.setData({
            tabs: [...this.data.tabs, ...res.data.data]
          })
          this.getList(this.data.tabs[0].id)
        }
      }
    )
  },

  /**
   * 获取文章列表
   */
  getList(id) {
    console.log(id)
    if (id != 0) {
      this.setData({
        'form.categoryId': id
      })
    }
    app.wxRequest(
      '/api/article/list', this.data.form,
      res => {
        tools.hideLoading();
        if (res.data.code == 1) {
          console.log(res.data.data)
          res.data.data.list.forEach(item => {
            item.cover_img_url = tools.globalData.url + item.cover_img_url
          });
          this.setData({
            list: res.data.data.list
          })
          console.log(this.data.list)
        }
      }
    )
  },

  /**
   * 切换tab动作
   */
  onChange(e) {
    const typeId = this.data.tabs[e.detail.index].id
    console.log(typeId)
    this.getList(typeId)
  },

  listeningEvent() {
    this.onShow()
  }
})