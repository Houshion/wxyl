@import '/css/main.wxss';

.message {
    background: #ffffff;
    min-height: 100vh;
}

.message image.centerBack {
    width: 100%;
    height: 202rpx;
}

.message .msg {
    display: flex;
    width: 80%;
    margin: -100rpx auto 0;
    align-items: flex-end;
}

.message .msg>image.headImg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    box-shadow: 0 0 5px 5px #f8fcf5;
}

.slotIcon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 50rpx;
}