const app = getApp();
const tools = app.tools;

Page({

  /**
   * 页面的初始数据
   */
  data: {extendCode:'',
    orderListUnuse: [],
    orderListUsing: [],
    orderListUsed: [],
    form: {
      page: 1,
      limit: 20,
      status: 0
    },
    lock: false,
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.setData({
      orderListUnuse: [],
      orderListUsing: [],
      orderListUsed: [],
      'form.page': 1,
    })
    this.init();
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
    wx.showNavigationBarLoading();
    this.setData({
      orderListUnuse: [],
      orderListUsing: [],
      orderListUsed: [],
      'form.page': 1,
    })
    this.init();
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    this.data.form.page++;
    if (!this.data.lock) {
      this.init();
    }
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function (options) {
    let userInfo = tools.getStorage("userInfo");
    if (userInfo.headImgUrl.indexOf("http") == -1) {
      userInfo.headImgUrl = tools.globalData.url + userInfo.headImgUrl
    }
    var shareObj = {
      path: '/pages/userSide/main/my/index/index?extendCode=' + userInfo.extendCode, // 默认是当前页面，必须是以‘/’开头的完整路径
      imgUrl: '', //转发时显示的图片路径，支持网络和本地，不传则使用当前页默认截图。
      success: function (res) { // 转发成功之后的回调　　　　　
        if (res.errMsg == 'shareAppMessage:ok') {}
      },
      fail: function () { // 转发失败之后的回调
        if (res.errMsg == 'shareAppMessage:fail cancel') {
          // 用户取消转发
        } else if (res.errMsg == 'shareAppMessage:fail') {
          // 转发失败，其中 detail message 为详细失败信息
        }
      },
      complete: function () {
        // 转发结束之后的回调（转发成不成功都会执行）
      }
    };
    // 来自页面内的按钮的转发
    if (options.from == 'button') {
      var dataid = options.target.dataset; //上方data-id=shareBtn设置的值
      // 此处可以修改 shareObj 中的内容
      shareObj.path = '/pages/userSide/main/my/index/index?extendCode=' + dataid.id;
    }
    // 返回shareObj
    return shareObj;
  },

  /**
   * 初始化数据
   */
  init() {
    this.setData({
      lock: true
    })
    app.wxRequest(
      '/api/order/userOrders', this.data.form,
      res => {
        this.setData({
          lock: false
        })
        tools.hideLoading();
        if (res.data.code == 1) {
          switch (this.data.form.status) {
            case 0:
              var list = this.data.orderListUnuse
              this.setData({
                orderListUnuse: [...list, ...res.data.data.list]
              })
              break;
            case 1:
              var list = this.data.orderListUsing
              this.setData({
                orderListUsing: [...list, ...res.data.data.list]
              })
              break;
            case 2:
              var list = this.data.orderListUsed
              this.setData({
                orderListUsed: [...list, ...res.data.data.list]
              })
              break;
          }
        } else {
          tools.showToast(res.data.msg)
        }
      }
    )
    wx.hideNavigationBarLoading();
    wx.stopPullDownRefresh();
  },

  /**
   * 
   */
  onChange(e) {
    this.setData({
      'form.status': e.detail.index,
      orderListUnuse: [],
      orderListUsing: [],
      orderListUsed: [],
      'form.page': 1,
    })
    this.init()
  },

  /**
   * 退款
   */
  fullback(e) {
    const { use,remain } = e.currentTarget.dataset

    const useCondition = remain / (use + remain)

    const that = this
    wx.showModal({
      title: '系统将原路返回金额',
      content: '￥' + e.currentTarget.dataset.price * useCondition,
      confirmColor: "#5ac2bb",
      success(res) {
        if (res.confirm) {
          app.wxRequest(
            '/api/order/applyRefund', {
              orderId: e.currentTarget.dataset.id
            },
            rt => {
              tools.showToast(rt.data.msg)
              that.setData({
                orderListUnuse: [],
                orderListUsing: [],
                orderListUsed: [],
                'form.page': 1,
              })
              that.init();
            }
          )
        }
      }
    })
  },
  useDevice(e) {
    const deviceno = e.currentTarget.dataset.deviceno
    const orderId = e.currentTarget.dataset.orderid
    tools.globalData.orderNo = e.currentTarget.dataset.orderno
    wx.showModal({
      title: '温馨提示',
      content: '是否前往使用设备？',
      confirmColor: "#5ac2bb",
      success(res) {
        if (res.confirm) {
          wx.navigateTo({
            url: '../using/index?deviceNo=' + deviceno + '&orderId=' + orderId,
          })
        }
      }
    })
  },
  comment(e) {
    console.log(e.currentTarget.dataset.id)
  },
})