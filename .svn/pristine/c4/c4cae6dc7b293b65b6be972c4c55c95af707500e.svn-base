@import '/css/main.wxss';
.line{
    display: inline-block;
    width: 9rpx;
    height: 30rpx;
    background: #5cc3bc;
    border-radius: 40rpx;
}
.pic_wrap {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    margin-right: 26rpx;
    overflow: hidden;
    float: left;
}
image.pic {
    width: 100%;
    height: 100%;
}
.pic_wrap .delete{
    position: absolute;
    right: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    font-size: 30rpx;
}
.textarea {
    height: 230rpx;
}
