  /**
   * 获取地图定位
   */
  getLocation(){
    console.log(123)
    let map = wx.createMapContext("map")
    map.getCenterLocation({
      success: res=>{
        let center = {
          lat:res.latitude,
          lng: res.longitude
        }
        this.setData({
          center: center
        })
        map.moveToLocation({
          longitude:res.longitude,
          latitude:res.latitude
        })
      }
    })
  },
