<view>
    <view class="title_box colw plr24 ptb30">
        <view>
            <van-notice-bar left-icon="volume-o" text="足协杯战线连续第2年上演广州德比战，上赛季半决赛上恒大以两回合5-3的总比分淘汰富力。" />
        </view>
        <view class="mt40 font35 tac">
            <text class="font20">￥</text>
            {{info.myMoney}}
        </view>
        <view class="tac font12">我的投资</view>
        <view class="font10 tac mt10">最新投资：{{info.ctime}}</view>
        <view class="btn_box mt50">
            <navigator url="/pages/my_investment/voucher/index" class="color1 bw btn font14">
                上传充值凭证
            </navigator>
            <navigator url="/pages/my_investment/recharge/index" class="bgc1 ml40 btn font14">
                充值
            </navigator>
        </view>
    </view>
    <view class="list_box plr24">
        <navigator url="/pages/my_investment/quota_list/index">
            <view>
                <image src="/images/icon1.png" class="icon"></image>
                <view class="font13 mt10 col9">投资额度列表</view>
            </view>
            <image src="/images/right.png" class="arrow_right"></image>
        </navigator>
        <navigator url="/pages/my_investment/income/index">
            <view>
                <image src="/images/icon2.png" class="icon"></image>
                <view class="font13 mt10 col9">我的收益</view>
            </view>
            <image src="/images/right.png" class="arrow_right"></image>
        </navigator>
        <navigator url="/pages/my_investment/statistics/index">
            <view>
                <image src="/images/icon3.png" class="icon3"></image>
                <view class="font13 mt10 col9">数据统计</view>
            </view>
            <image src="/images/right.png" class="arrow_right"></image>
        </navigator>
    </view>
</view>