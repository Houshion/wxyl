const app = getApp();
const tools = app.tools;
Page({

  /**
   * 页面的初始数据
   */
  data: {
    list: [
      {name: 'money',title: '充值金额',type: 'digit'},
      {name: 'bankNo',title: '银行卡号',type: 'number'},
      {name: 'bankName',title: '对应银行',type: 'text'},
      {name: 'realName',title: '实名',type: 'text'},
      {name: 'phone',title: '手机号',type: 'number'},
      {name: 'cardNo',title: '身份证号',type: 'idcard'},
    ],
    lispic: [], //图片列表
    lispic_path: [], //图片列表路径
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },
  listeningEvent(e){

  },
  formSubmit: function (e) {
    console.log('form发生了submit事件，携带数据为：', e.detail.value)
    const {
      lispic_path
    } = this.data;
    const {money, bankNo, bankName, realName,phone, cardNo} = e.detail.value;
    if (tools.isNull(money)) {
      tools.showToast('请输入充值金额');
    }else if (tools.isNull(bankNo)) {
      tools.showToast('请输入银行卡号');
    }else if (tools.isNull(bankName)) {
      tools.showToast('请输入对应银行');
    }else if (tools.isNull(realName)) {
      tools.showToast('请输入实名');
    }else if (tools.isNull(phone)) {
      tools.showToast('请输入手机号');
    }else if (!tools.checkPhone(phone)) {
      tools.showToast('手机号码有误');
    }else if (tools.isNull(cardNo)) {
      tools.showToast('请输入身份证号');
    }else if (!tools.checkIdCode(cardNo)) {
      tools.showToast('身份证号有误');
    } else if (lispic_path.length == 0) {
      tools.showToast('请上传图片');
    }else{
      tools.showLoading();
      const form = {
        ...e.detail.value,
        voucherImgUrl: lispic_path.join(',')
      };
      app.wxRequest(
          '/api/investRecord/saveRechangeVoucher',
          form,
          res => {
            tools.hideLoading();
            if(res.data.code == 1){
             tools.showModal('提交成功',flag => {
               if(flag){
                 tools.navigateBack();
               }
             },false)
            }else{
              tools.showToast(res.data.msg)
            }
          }
      )
    }
  },

  /**
   * 上传图片
   */
  choice() {
    let that = this;
    app.uploadFile('', function(flag, idx, msg, data) {
      if (flag == 1) {
        let res = msg.tempFilePaths;
        if (that.data.lispic.length < 8) {
          that.setData({
            lispic: that.data.lispic.concat(res)
          });
        } else {
          tools.showModal('最多只能上传8张图片...', () => {}, false);
          return false;
        }

      } else if (flag == 2) {
        tools.hideLoading();
        if (that.data.lispic_path.length < 8) {
          that.data.lispic_path.push(msg);
        }
      }
    }, {token:tools.getStorage('token')}, 8 - that.data.lispic.length)
  },
  indexpic_delete(e) { //删除图片
    const {
      lispic,
      lispic_path
    } = this.data;
    tools.showModal('是否删除图片？', (flag) => {
      if (flag) {
        lispic.splice(e.currentTarget.dataset.index, 1);
        lispic_path.splice(e.currentTarget.dataset.index, 1);
        this.setData({
          lispic,
          lispic_path
        });
      }
    });
  },
  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})
