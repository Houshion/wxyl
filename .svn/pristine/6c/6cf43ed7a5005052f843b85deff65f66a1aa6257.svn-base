   */
  data: {
    center: {
      lat: '',
      lng: ''
    },
    shopAddress: '',
    shopsList: [
      {
        address: "广东省东莞市南城区天安数码城",
        distance: "5.2",
        time: "9:00-21:00"
      },
    ]
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.getLocation()
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

