@import "/css/main";

.box {
    padding: 30rpx;
}

.list {
    padding: 30rpx;
    background: #ffffff;
    border-radius: 5px;
}

.list view {
    line-height: 2;
}

.list view.content{
    line-height: 1.5;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
}

.time {
    color: #999999;
    font-size: 24rpx;
}

.imgs {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.imgs .img {
    width: 30%;
    margin-right: 5%;
}

.imgs .img:nth-child(3n) {
    margin-right: 0;
}