@import '/css/main.wxss';

.form_box .list+.list {
    border-top: 1px solid #e5e5e5;
}

.pic_wrap {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    margin-right: 14rpx;
    overflow: hidden;
    float: left;
}

image.pic {
    width: 100%;
    height: 100%;
}

.pic_wrap .delete {
    position: absolute;
    right: 0;
    top: 0;
    background: rgba(0, 0, 0, .5);
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    font-size: 30rpx;
}

.hideInput {
    display: none;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 5rpx;
}

.modal-title {
    padding-top: 30rpx;
    font-size: 32rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 20rpx 32rpx;
    font-size: 28rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-confirm,
.btn-cancel {
    width: 50%;
    color: #abb4bd;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    border-right: none;
    color: #6fb64b;
    display: -moz-box;
    -moz-box-pack: center;
    -moz-box-align: center;
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    display: box;
    box-pack: center;
    box-align: center;
}