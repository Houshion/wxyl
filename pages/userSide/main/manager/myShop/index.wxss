@import '/css/main.wxss';

#map {
    width: 100%;
    height: 100vh;
}

.serachBox {
    position: absolute;
    left: 5%;
    right: 5%;
    width: 90%;
    top: 40rpx;
    border-radius: 30px;
}

.serachBox .search,
.serachBox .search .van-search__content {
    background: #ffffff;
}

.shops {
    position: absolute;
    left: 5%;
    right: 5%;
    width: calc(90% - 0rpx);
    top: 170rpx;
    background: #ffffff;
    border-radius: 5px;
}

.shops .shop {
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: #efefef 0 1px 5px 0;
}

.shops .shop:last-child {
    margin-bottom: 0
}

.shops .time{
    color: #999999;
    font-size: 24rpx;
}

.shops .address {
    width: calc(100% - 120rpx);
}

.shops .distance {
    width: 120rpx;
    text-align: center;
    color: #f69626;
}

.confirmBtn {
    color: #ffffff;
    background: #5ac2bb;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
}