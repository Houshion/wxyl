@import '/css/main.wxss';
page{
    padding: 20rpx;
    box-sizing: border-box;
}
.main_box{
    border-radius: 10rpx;
    height: 100%;
    max-height: 100%;
    overflow-y: scroll;
    background: #fff;
}
.content{
    line-height: 50rpx;
}
.qrcode_img{
    width: 200rpx;
    height: 200rpx;
}
.img_box>view{
    width: 200rpx;
    height: 200rpx;
    background: #ccc;
    float: left;
    margin-right: 35rpx;
    margin-bottom: 30rpx;
}
.img_box>view:nth-child(3n){
    margin-right: 0;
}
.confirm{
    width: 300rpx !important;
}
.confirm:first-child{
    margin-left: 30rpx;
    background: #e0fffc;
    color: #5cc3bc;
}
